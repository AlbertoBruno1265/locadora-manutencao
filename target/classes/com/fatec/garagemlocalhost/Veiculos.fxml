<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="492.0" prefWidth="940.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fatec.garagemlocalhost.VeiculosController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <TextField fx:id="txtBusca" promptText="Busca" />
            <RadioButton fx:id="rbModelo" mnemonicParsing="false" text="MODELO">
               <toggleGroup>
                  <ToggleGroup fx:id="tipoBusca" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbPlaca" mnemonicParsing="false" text="PLACA" toggleGroup="$tipoBusca" />
            <RadioButton fx:id="rbMarca" mnemonicParsing="false" text="MARCA" toggleGroup="$tipoBusca" />
            <RadioButton fx:id="rbCor" mnemonicParsing="false" text="COR" toggleGroup="$tipoBusca" />
            <ComboBox fx:id="cbAno" prefWidth="150.0" promptText="ANO" />
            <ComboBox fx:id="cbCategoria" prefWidth="150.0" promptText="CATEGORIA" />
            <Button fx:id="btnLimparFiltros" mnemonicParsing="false" text="LIMPAR FILTROS" />
         </children>
      </HBox>
      <TableView fx:id="tabelaVeiculos" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="452.0" prefWidth="782.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="colunaPlaca" prefWidth="75.0" text="PLACA" />
          <TableColumn fx:id="colunaMarca" prefWidth="75.0" text="MARCA" />
            <TableColumn fx:id="colunaCor" prefWidth="75.0" text="COR" />
            <TableColumn fx:id="colunaAno" prefWidth="75.0" text="ANO" />
            <TableColumn fx:id="colunaChassi" prefWidth="111.0" text="CHASSI" />
            <TableColumn fx:id="colunaModelo" prefWidth="75.0" text="MODELO" />
            <TableColumn fx:id="colunaQuilometragem" prefWidth="126.0" text="QUILOMETRAGEM" />
            <TableColumn fx:id="colunaCategoria" prefWidth="85.0" text="CATEGORIA" />
            <TableColumn fx:id="colunaPrecoBase" prefWidth="116.0" text="PREÇO BASE" />
            <TableColumn fx:id="colunaSituacao" prefWidth="116.0" text="SITUAÇÃO" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
